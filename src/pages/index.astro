    icon: "/assets/icons/furaffinity.svg",
    title: "FurAffinity",
    background: "#202225",
    iconColor: "#efb221",
  },
  {
    href: "https://picarto.tv/LEVI",
    icon: "/assets/icons/picarto.svg",
    title: "Picarto",
